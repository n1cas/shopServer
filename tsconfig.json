{
  "compilerOptions": {                        
    "target": "es6",            
    "noEmit": false,                   
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./src",     
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true                   
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["./node_modules", "**/*.spec.ts", "dist/*"]

}